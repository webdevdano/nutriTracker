# Dockerfile for Next.js frontend
FROM node:18-alpine
WORKDIR /app
COPY package.json pnpm-lock.yaml ./
RUN npm install -g pnpm && pnpm install --frozen-lockfile
COPY . .
RUN pnpm run build
EXPOSE 3000
# Required so Next.js listens on all interfaces inside the container
ENV HOSTNAME=0.0.0.0
CMD ["pnpm", "start"]